<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.jacksonhu.idiotcounter.MainActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="109dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.08"
            android:id="@+id/countTextView" app:layout_constraintHorizontal_bias="0.504"
            android:textAppearance="@android:style/TextAppearance.Material.Title" android:textSize="36sp"
            android:textAlignment="center" tools:layout_constraintRight_creator="1" android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp" tools:layout_constraintLeft_creator="1"/>
    <Button
            android:text="@string/add_idiot_button_text"
            android:layout_width="294dp"
            android:layout_height="56dp"
            android:id="@+id/button3" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/countTextView"
            android:layout_marginLeft="58dp" app:layout_constraintLeft_toLeftOf="parent" android:onClick="addCounter"
            android:layout_marginStart="58dp"/>

</android.support.constraint.ConstraintLayout>
